{
  "uid": "careplan-overview",
  "title": "Care Plan System Overview",
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 100,
      "title": "── Business Metrics ──",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 1,
      "title": "Care Plan Requests / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(careplan_requests_total[5m])) by (status) * 60",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "id": 2,
      "title": "Care Plan Outcomes",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(careplan_status_total[5m])) by (status) * 60",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Active Care Plans by Status",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "careplan_active_count",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "id": 4,
      "title": "Duplicate Blocks / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(careplan_duplicate_blocks_total[5m])) by (reason) * 60",
          "legendFormat": "{{reason}}"
        }
      ]
    },
    {
      "id": 200,
      "title": "── Performance Metrics ──",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "id": 5,
      "title": "API Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 10 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "id": 6,
      "title": "LLM Call Duration (p50 / p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 10 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(llm_call_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(llm_call_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "id": 7,
      "title": "Care Plan Generation Duration (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 10 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(careplan_generation_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "id": 300,
      "title": "── Error Metrics ──",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "collapsed": false
    },
    {
      "id": 8,
      "title": "HTTP Error Rate %",
      "type": "stat",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 19 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(http_request_errors_total{status_code=~\"5..\"}[5m])) / sum(rate(http_request_duration_seconds_count[5m])) * 100",
          "legendFormat": "5xx %"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "thresholds": { "steps": [
          { "value": 0, "color": "green" },
          { "value": 1, "color": "yellow" },
          { "value": 5, "color": "red" }
        ]}}
      }
    },
    {
      "id": 9,
      "title": "HTTP Errors / min by Status Code",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 19 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(http_request_errors_total[5m])) by (status_code) * 60",
          "legendFormat": "{{status_code}}"
        }
      ]
    },
    {
      "id": 10,
      "title": "Celery Retries / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 19 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(celery_task_retries_total[5m])) * 60",
          "legendFormat": "retries"
        },
        {
          "expr": "sum(rate(celery_task_failures_total[5m])) * 60",
          "legendFormat": "permanent failures"
        }
      ]
    },
    {
      "id": 11,
      "title": "LLM Errors / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 19 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(llm_call_errors_total[5m])) by (error_type) * 60",
          "legendFormat": "{{error_type}}"
        }
      ]
    },
    {
      "id": 400,
      "title": "── Resource Metrics ──",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "collapsed": false
    },
    {
      "id": 12,
      "title": "PostgreSQL Connections",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 28 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "connections"
        }
      ],
      "fieldConfig": {
        "defaults": { "max": 100, "thresholds": { "steps": [
          { "value": 0, "color": "green" },
          { "value": 60, "color": "yellow" },
          { "value": 80, "color": "red" }
        ]}}
      }
    },
    {
      "id": 13,
      "title": "Redis Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 28 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "legendFormat": "used"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "id": 14,
      "title": "Redis Connected Clients",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 28 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "redis_connected_clients",
          "legendFormat": "clients"
        }
      ],
      "fieldConfig": {
        "defaults": { "max": 100, "thresholds": { "steps": [
          { "value": 0, "color": "green" },
          { "value": 50, "color": "yellow" },
          { "value": 80, "color": "red" }
        ]}}
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
